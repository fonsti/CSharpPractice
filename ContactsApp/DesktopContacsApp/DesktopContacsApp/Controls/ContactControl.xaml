<UserControl x:Class="DesktopContacsApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopContacsApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="5">
            <TextBlock Text="Name Lastname" 
                       x:Name="nameTextBlock"
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBlock Text="Email@example.com" 
                       x:Name="emailTextBlock"
                       FontSize="15"
                       Foreground="DodgerBlue"/>
            <TextBlock Text="phone number" 
                       x:Name="phoneTextBlock"
                       FontSize="15"
                       FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
